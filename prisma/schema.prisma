// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model ManaboodleUser {
  id               String    @id @default(uuid())
  authUserId       String    @unique // References Supabase auth.users.id
  username         String    @unique // Public identifier (e.g., @john_smith)
  email            String    @unique
  name             String    // Full name / Display name
  classCode        String?   // Optional course/class identifier
  affiliation      String    // "student" | "faculty" | "staff"
  accessType       String    @default("guest") // "harvard" | "sesame" | "guest"
  emailVerified    Boolean   @default(false)
  institution      String?   // Organization/institution name (required for guests)
  guestPassId      String?   // References GuestPass if guest user
  accessExpiresAt  DateTime? // For guest passes with time limits
  lastLoginAt      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  
  guestPass        GuestPass? @relation(fields: [guestPassId], references: [id])
  
  @@index([authUserId])
  @@index([email])
  @@index([username])
  @@index([accessType])
  @@index([emailVerified])
  
  @@map("ManaboodleUser")
}

model GuestPass {
  id             String    @id @default(uuid())
  email          String
  code           String?   @unique // Unique approval code
  status         String    @default("pending") // "pending" | "approved" | "denied" | "expired"
  requestReason  String?   // Why they need access
  institution    String?   // Their organization
  expiresAt      DateTime? // When access expires (if approved)
  approvedBy     String?   // Admin email who approved
  approvedAt     DateTime?
  deniedReason   String?   // Reason for denial (if denied)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  users          ManaboodleUser[]
  
  @@index([email])
  @@index([status])
  @@index([code])
}

model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  role      String   @default("admin") // "admin" | "super_admin"
  createdAt DateTime @default(now())
  
  @@index([email])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
